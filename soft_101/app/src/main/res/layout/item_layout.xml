        android:paddingTop="20sp"
        android:paddingBottom="10sp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:textSize="30sp" />
</LinearLayout>
